{
  "_instructions": [
    "1. Copy this file to config.json",
    "2. Fill in your Actual Budget server details",
    "3. Add your bank credentials",
    "4. Remove banks you don't use",
    "5. Never commit config.json to git"
  ],

  "actual": {
    "init": {
      "serverURL": "http://localhost:5006",
      "password": "your_actual_server_password",
      "dataDir": "./data"
    },
    "budget": {
      "syncId": "your_budget_sync_id",
      "password": null
    }
  },

  "delayBetweenBanks": 5000,

  "banks": {

    "discount": {
      "id": "123456789",
      "password": "your_password",
      "num": "ABC123",
      "daysBack": 7,
      "targets": [{ "actualAccountId": "uuid", "reconcile": false, "accounts": "all" }]
    },

    "leumi": {
      "username": "your_username",
      "password": "your_password",
      "startDate": "2026-01-25",
      "targets": [{ "actualAccountId": "uuid", "reconcile": false, "accounts": "all" }]
    },

    "oneZero": {
      "email": "your@email.com",
      "password": "your_password",
      "phoneNumber": "+972501234567",
      "twoFactorAuth": true,
      "twoFactorTimeout": 300,
      "otpLongTermToken": "",
      "daysBack": 14,
      "targets": [{ "actualAccountId": "uuid", "reconcile": false, "accounts": "all" }]
    }
  },

  "logConfig": {
    "format": "words",
    "maxBufferSize": 150
  },

  "categorization": {
    "mode": "none",
    "translations": [
      { "fromPayee": "סופר",       "toPayee": "Supermarket" },
      { "fromPayee": "שופרסל",     "toPayee": "Shufersal" },
      { "fromPayee": "רמי לוי",    "toPayee": "Rami Levy" },
      { "fromPayee": "דלק",        "toPayee": "Gas Station" },
      { "fromPayee": "חשמל",       "toPayee": "Electric Company" }
    ]
  },

  "notifications": {
    "enabled": false,
    "maxTransactions": 5,
    "telegram": {
      "botToken": "123456789:ABCDefGHijKlMnOpQrStUvWxYz",
      "chatId": "-1001234567890",
      "messageFormat": "compact",
      "showTransactions": "new",
      "listenForCommands": true
    },
    "webhook": {
      "url": "https://hooks.slack.com/services/T.../B.../...",
      "format": "slack"
    }
  },

  "_reference": {
    "delayBetweenBanks": "Milliseconds between bank imports. Default: 0 (no delay). Prevents API throttling",
    "daysBack": "1-30. Import last N days. Cannot use with startDate",
    "startDate": "YYYY-MM-DD. Fixed date, max 1 year back. Cannot use with daysBack",
    "reconcile": "false (default). true = auto-adjust balance to match bank",
    "twoFactorAuth": "false (default). true = bot asks for SMS OTP via Telegram",
    "twoFactorTimeout": "Seconds to wait for OTP reply. Default: 300",
    "otpLongTermToken": "Set after first 2FA login to skip OTP on future runs",
    "messageFormat": "summary | compact | ledger | emoji",
    "showTransactions": "new | all | none",
    "listenForCommands": "true = bot listens for /scan, /status, /logs, /help",
    "webhook.url": "HTTP(S) URL for Slack, Discord, or custom webhook",
    "webhook.format": "slack | discord | plain (default: plain)",
    "maxTransactions": "1-25. Max transactions per account in notifications. Default: 5",
    "logConfig.format": "words | json | table | phone (default: words)",
    "logConfig.maxBufferSize": "1-500. Ring buffer for /logs. Auto-enabled (150) when listenForCommands=true, otherwise 0",
    "categorization.mode": "none (default) | history | translate. See README for details",
    "categorization.translations": "Array of {fromPayee, toPayee} rules. Only used when mode=translate",
    "syncId": "Settings → Show Advanced Settings → Sync ID",
    "actualAccountId": "Click account in Actual Budget → ID from URL"
  }
}
